<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".fragments.BooksFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/books_fragment_books_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="always"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/books_fragment_add_book_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_add"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:focusable="true"
        android:clickable="true"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/books_fragment_add_book_manually_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorBackground2"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_create"
        android:visibility="invisible"
        app:backgroundTint="@color/colorBackground"
        app:layout_constraintBottom_toTopOf="@+id/books_fragment_add_book_button"
        app:layout_constraintEnd_toEndOf="@id/books_fragment_add_book_button"
        app:layout_constraintStart_toStartOf="@id/books_fragment_add_book_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/books_fragment_add_book_by_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorBackground2"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_a_photo"
        android:visibility="invisible"
        app:backgroundTint="@color/colorBackground"
        app:layout_constraintBottom_toTopOf="@id/books_fragment_add_book_by_search_button"
        app:layout_constraintEnd_toEndOf="@id/books_fragment_add_book_button"
        app:layout_constraintStart_toStartOf="@id/books_fragment_add_book_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/books_fragment_add_book_by_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorBackground2"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_search"
        android:visibility="invisible"
        app:backgroundTint="@color/colorBackground"
        app:layout_constraintBottom_toTopOf="@id/books_fragment_add_book_manually_button"
        app:layout_constraintEnd_toEndOf="@id/books_fragment_add_book_button"
        app:layout_constraintStart_toStartOf="@id/books_fragment_add_book_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>