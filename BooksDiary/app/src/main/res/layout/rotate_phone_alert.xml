<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/rotate_phone_alert_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_rotate_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/rotate_phone_alert_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Please rotate phone to the left and take a picture of the book handle"
        app:layout_constraintStart_toEndOf="@id/rotate_phone_alert_image"
        app:layout_constraintTop_toTopOf="@id/rotate_phone_alert_image"
        app:layout_constraintBottom_toBottomOf="@id/rotate_phone_alert_image"
        />

</androidx.constraintlayout.widget.ConstraintLayout>