<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/searched_book_card_book_image"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/searched_book_card_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/searched_book_card_book_image"
            android:padding="3dp"
            android:text="Book Title"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/searched_book_card_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searched_book_card_book_title"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/searched_book_card_book_image"
            android:padding="3dp"
            android:text="Author"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/searched_book_card_book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searched_book_card_book_author"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/searched_book_card_book_image"
            android:padding="3dp"
            android:text="Description"
            android:textSize="11sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
